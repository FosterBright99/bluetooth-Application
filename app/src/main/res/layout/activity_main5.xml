<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We have detected another fingerprint on your device visit the systems administrator and re-register"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="32dp"/>

        <ImageView
            android:id="@+id/fingerprint_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/baseline_error_outline_24"
            android:layout_below="@id/title_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/scan_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Re-register"
            android:textColor="#FFFFFF"
            android:background="#1E90FF"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:padding="16dp"
            android:layout_below="@id/fingerprint_image"
            android:layout_centerHorizontal="true"
            android:rippleColor="#FFFFFF" />

    </RelativeLayout>


</RelativeLayout>